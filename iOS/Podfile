platform :ios, '11.0'
use_frameworks!

# 対象の Xcode プロジェクトを明示
project 'PJDREAM.xcodeproj'

# =========================
# 共通で使う Pod 定義
# =========================
def shared_pods
  # UI / Utility
  pod 'IQKeyboardManager'
  pod 'Alamofire'
  pod 'SwiftyJSON'
  pod 'SwiftKeychainWrapper'
  pod 'DropDown'
  pod 'ZVProgressHUD', '~> 2.6.0'

  # Image / UI
  pod 'Kingfisher', '~> 5.15.8'
  pod 'Localize-Swift'
  pod 'MXSegmentedControl'

  # AWS
  pod 'Amplify'
  pod 'AmplifyPlugins/AWSCognitoAuthPlugin'

  # Image Crop
  pod 'CropViewController'

  # Local DB
  pod 'MagicalRecord'
end

# =========================
# 実在するターゲットごとに適用
# =========================
target 'Production' do
  shared_pods
end

target 'Staging' do
  shared_pods
end

target 'TRMUAT03' do
  shared_pods
end

target 'TRMUAT' do
  shared_pods
end

target 'UAT' do
  shared_pods
end
